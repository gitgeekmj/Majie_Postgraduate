<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/parentUse"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="cn.studyjams.s1.sj19.majie.LifeTips">

        <TextView
            style="@style/titleUse"
            android:text="@string/textView_lifeTips_title01" />

        <ListView
            android:id="@+id/lifeTips01_listView"
            android:layout_width="match_parent"
            android:layout_height="600dp"></ListView>

        <TextView
            style="@style/titleUse"
            android:text="@string/textView_lifeTips_title02" />

        <ListView
            android:id="@+id/lifeTips02_listView"
            android:layout_width="match_parent"
            android:layout_height="280dp"></ListView>
    </LinearLayout>
</ScrollView>